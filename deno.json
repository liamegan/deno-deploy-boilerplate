{
	"deploy": {
		"org": "liamegan",
		"app": "deno-deploy-boilerplate"
	},
	"nodeModulesDir": "auto",
	"tasks": {
		"dev": "deno run -A npm:vite dev",
		"build": "deno run -A npm:prisma migrate && deno run -A npm:prisma generate && deno run -A npm:vite build",
		"preview": "deno run -A npm:vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"db:generate": "deno run -A npm:prisma generate",
		"db:push": "deno run -A npm:prisma db push",
		"db:migrate": "deno run -A npm:prisma migrate dev",
		"db:migrate:reset": "deno run -A npm:prisma migrate reset",
		"db:migrate:deploy": "deno run -A npm:prisma migrate deploy",
		"db:studio": "deno run --tunnel -A npm:prisma studio"
	},
	"compilerOptions": {
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"checkJs": true,
		"strict": true,
		"noImplicitAny": true
	},
	"allowScripts": ["npm:@prisma/engines@7.4.0", "npm:esbuild@0.27.3", "npm:prisma@7.4.0"],
	"imports": {
		"$lib": "./src/lib",
		"$lib/*": "./src/lib/*",
		"$gentypes/": "./.svelte-kit/types/",
		"@std/assert": "jsr:@std/assert@^1.0.19",
		"string_decoder": "node:string_decoder",
		"events": "node:events",
		"stream": "node:stream",
		"buffer": "node:buffer",
		"crypto": "node:crypto",
		"net": "node:net",
		"tls": "node:tls",
		"dns": "node:dns",
		"fs": "node:fs",
		"path": "node:path",
		"util": "node:util",
		"os": "node:os",
		"querystring": "node:querystring"
	}
}
